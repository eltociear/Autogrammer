{
  "name": "codesynth",
  "type": "module",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/thekevinscott/codesynth.git"
  },
  "main": "./dist/codesynth.js",
  "exports": {
    ".": "./dist/codesynth.js"
  },
  "scripts": {
    "lint": "wireit",
    "test": "vitest",
    "build": "wireit",
    "build:check": "wireit",
    "build:esm": "wireit",
    "build:umd": "wireit"
  },
  "wireit": {
    "lint": {
      "command": "eslint -c .eslintrc.cjs src --ext .ts"
    },
    "build:check": {
      "command": "path-exists ./dist/index.js && path-exists ./dist/index.umd.cjs && path-exists ./dist/index.d.ts "
    },
    "build:esm": {
      "command": "tsc"
    },
    "build:umd": {
      "command": "vite build"
    },
    "build": {
      "command": "rimraf ./dist && pnpm build:umd && pnpm build:esm && cp ../../README.md ./README.md && cp ../../LICENSE ./LICENSE",
      "files": [
        "../../README.md",
        "./src/**/*.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "./dist/**",
        "./README.md"
      ]
    }
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "keywords": [
    "llm",
    "code-generation",
    "sql",
    "json",
    "llama.cpp",
    "transformers.js",
    "llamafile",
    "gbnf",
    "grammar"
  ],
  "dependencies": {
    "contort": "^0.0.9",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1",
    "wireit": "^0.14.4"
  }
}
