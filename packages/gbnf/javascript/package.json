{
  "name": "gbnf",
  "type": "module",
  "description": "A library for parsing GBNF grammars",
  "version": "0.1.10",
  "repository": {
    "type": "git",
    "url": "https://github.com/thekevinscott/autogrammer.git",
    "directory": "packages/gbnf"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "clean": "wireit",
    "lint": "wireit",
    "test:unit": "wireit",
    "test": "wireit",
    "test:integration": "wireit",
    "build": "wireit",
    "build:check": "wireit",
    "build:esm": "wireit",
    "build:umd": "wireit"
  },
  "wireit": {
    "clean": {
      "command": "rimraf ./dist"
    },
    "test:unit": {
      "command": "vitest --config ./vitest.config.unit.ts run"
    },
    "test": {
      "command": "pnpm test:unit && pnpm test:integration "
    },
    "test:integration": {
      "command": "vitest --config ./vitest.config.integration.ts run"
    },
    "lint": {
      "command": "eslint -c .eslintrc.cjs src --ext .ts"
    },
    "build:check": {
      "command": "ls ./dist && path-exists ./dist/index.js && path-exists ./dist/index.umd.cjs && path-exists ./dist/index.d.ts && path-exists ./LICENSE"
    },
    "build:esm": {
      "command": "vite build -c ./vite.config.esm.ts"
    },
    "build:umd": {
      "command": "vite build -c ./vite.config.umd.ts"
    },
    "build": {
      "command": "pnpm clean && pnpm build:umd && pnpm build:esm && cp ../../../LICENSE ./LICENSE",
      "output": [
        "./LICENSE",
        "dist/**"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "package.json",
        "vite.config.ts",
        "vite.config.umd.ts",
        "vite.config.esm.ts",
        "tsconfig.json"
      ]
    }
  },
  "keywords": [
    "gbnf",
    "grammar",
    "grammar-parser"
  ],
  "author": "Kevin Scott",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@vitest/coverage-istanbul": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "path-exists-cli": "^2.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1",
    "wireit": "^0.14.4"
  }
}
