{
  "name": "code-editor",
  "version": "0.0.1",
  "type": "module",
  "description": "Render editable and runnable code snippets",
  "repository": {
    "type": "git",
    "url": "https://github.com/thekevinscott/autogrammer.git",
    "directory": "packages/codecell"
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.umd.cjs",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "lint": "wireit",
    "clean": "wireit",
    "build": "wireit",
    "build:umd": "wireit",
    "build:check": "wireit",
    "dev": "vite --host --config ./dev/vite.config.ts --port 5159"
  },
  "wireit": {
    "clean": {
      "command": "rimraf ./dist"
    },
    "lint": {
      "command": "eslint -c ./.eslintrc.cjs src --ext .ts"
    },
    "build:check": {
      "command": "path-exists ./dist/index.umd.cjs "
    },
    "build:umd": {
      "command": "vite build -c vite.config.umd.ts"
    },
    "build": {
      "command": "pnpm clean && pnpm build:umd && pnpm build:check",
      "files": [
        "../../README.md",
        "../../LICENSE",
        "./src/**/*.ts",
        "package.json",
        "vite.config.ts",
        "vite.config.umd.ts",
        "vite.config.esm.ts",
        "tsconfig.json"
      ],
      "output": [
        "./dist/**",
        "./LICENSE"
      ]
    }
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "keywords": [
    "jupyter",
    "cell",
    "code sandbox"
  ],
  "dependencies": {
    "lit": "^3.1.3",
    "playground-elements": "^0.18.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@vitest/coverage-istanbul": "^1.4.0",
    "@vitest/coverage-v8": "^1.5.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "path-exists-cli": "^2.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-string": "^3.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vitest": "^1.5.3",
    "wireit": "^0.14.4"
  }
}
