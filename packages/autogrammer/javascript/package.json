{
  "name": "autogrammer",
  "description": "A library for generating syntactically valid code from an LLM.",
  "type": "module",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/thekevinscott/autogrammer.git",
    "directory": "packages/autogrammer"
  },
  "main": "./dist/autogrammer.js",
  "exports": {
    ".": "./dist/autogrammer.js"
  },
  "scripts": {
    "clean": "wireit",
    "copy": "wireit",
    "copy:gbnf": "wireit",
    "copy:assets": "wireit",
    "lint": "wireit",
    "test:unit": "wireit",
    "test": "wireit",
    "build": "wireit",
    "build:check": "wireit",
    "build:esm": "wireit",
    "build:umd": "wireit"
  },
  "wireit": {
    "lint": {
      "command": "eslint -c .eslintrc.cjs src --ext .ts",
      "dependencies": [
        "../../json2gbnf/javascript:build",
        "../../contort:build"
      ]
    },
    "test:unit": {
      "command": "vitest --config ./vite.config.ts run",
      "dependencies": [
        "../../json2gbnf/javascript:build",
        "../../contort:build"
      ]
    },
    "clean": {
      "command": "rimraf ./dist"
    },
    "test": {
      "command": "pnpm test:unit"
    },
    "copy": {
      "command": "pnpm copy:gbnf && pnpm copy:assets"
    },
    "copy:gbnf": {
      "command": "cpx \"./src/**/*.gbnf\" ./dist -v",
      "files": [
        "./src/**/*.gbnf"
      ],
      "output": [
        "./dist/**/*.gbnf"
      ]
    },
    "copy:assets": {
      "command": "cp ../../../LICENSE ./LICENSE ",
      "files": [
        "../../../LICENSE"
      ],
      "output": [
        "./LICENSE"
      ]
    },
    "build:check": {
      "command": "ls ./dist && path-exists ./dist/index.js && path-exists ./dist/index.umd.cjs && path-exists ./dist/index.d.ts && path-exists ./LICENSE"
    },
    "build:esm": {
      "command": "tsc"
    },
    "build:umd": {
      "command": "vite build"
    },
    "build": {
      "command": "pnpm clean && pnpm build:umd && pnpm build:esm && pnpm copy",
      "dependencies": [
        "../../json2gbnf/javascript:build",
        "../../contort:build"
      ],
      "files": [
        "./src/**/*.ts",
        "!./src/**/*.test.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "./LICENSE",
        "./dist/**"
      ]
    }
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "keywords": [
    "llm",
    "code-generation",
    "sql",
    "json",
    "llama.cpp",
    "transformers.js",
    "llamafile",
    "gbnf",
    "grammar"
  ],
  "dependencies": {
    "contort": "workspace:*",
    "json2gbnf": "workspace:*",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mustache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@vitest/coverage-v8": "^1.5.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "path-exists-cli": "^2.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "cpx2": "^7.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.5.2",
    "wireit": "^0.14.4"
  }
}
