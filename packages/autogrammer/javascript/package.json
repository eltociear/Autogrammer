{
  "name": "autogrammer",
  "description": "A library for generating syntactically valid code from an LLM.",
  "type": "module",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/thekevinscott/autogrammer.git"
  },
  "main": "./dist/autogrammer.js",
  "exports": {
    ".": "./dist/autogrammer.js"
  },
  "scripts": {
    "lint": "wireit",
    "test": "vitest",
    "build": "wireit",
    "build:check": "wireit",
    "build:esm": "wireit",
    "build:umd": "wireit"
  },
  "wireit": {
    "lint": {
      "command": "eslint -c .eslintrc.cjs src --ext .ts"
    },
    "build:check": {
      "command": "path-exists ./dist/index.js && path-exists ./dist/index.umd.cjs && path-exists ./dist/index.d.ts && path-exists ./LICENSE"
    },
    "build:esm": {
      "command": "tsc"
    },
    "build:umd": {
      "command": "vite build"
    },
    "build": {
      "command": "rimraf ./dist && pnpm build:umd && pnpm build:esm && cp ../../../../LICENSE ./LICENSE",
      "files": [
        "./src/**/*.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "./dist/**"
      ]
    }
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "keywords": [
    "llm",
    "code-generation",
    "sql",
    "json",
    "llama.cpp",
    "transformers.js",
    "llamafile",
    "gbnf",
    "grammar"
  ],
  "dependencies": {
    "contort": "^0.0.10",
    "json2gbnf": "workspace:*",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mustache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@vitest/coverage-v8": "^1.5.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "path-exists-cli": "^2.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.5.2",
    "wireit": "^0.14.4"
  }
}
